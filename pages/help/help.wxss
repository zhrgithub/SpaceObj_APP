  justify-content: center;
  align-items: center;
  height: 28rpx;
  font-size: 12px;
  color: #bfbfbf;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.project-list-style {
  width: 96%;
  margin-left: 2%;
